---
import Section from "../Section.astro"
import { useTranslations } from '@/i18n/utils';

interface Props {
  lang?: string;
}

const { lang = 'es' } = Astro.props;
const t = useTranslations(lang as 'es' | 'en');

// Cargar el CV según el idioma
const cvModule = lang === 'en' 
  ? await import('../../../cv.en.json')
  : await import('../../../cv.json');

const { work } = cvModule.default;
---

<Section title={t('experience.title')} id="experiencia">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, highlights }) => {
          const startYear = new Date(startDate).getFullYear()
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : t('experience.current')

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>
                      {name}
                    <h4>{position}</h4>
                    </h3>
                  </div>

                  <div>
                    <time 
                      datetime={startDate}
                      data-title={startDate}>
                        {startYear}
                    </time>
                    {" - "}
                    <time 
                      datetime={endDate}
                      data-title={endDate}>
                        {endYear}
                    </time>
                  </div>
                </header>

                <footer>
                  <p>{summary}</p>
                   <ul>
                     {highlights.map(highlight => (
                       <li>{highlight}</li>
                     ))}
                   </ul>
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 9px;
  }

  article ul {
  margin-top: 12px;
  padding-left: 20px;
  font-size: 0.85rem;
  line-height: 1.4;
  color: #555;
  list-style: none;
}

:global(.dark) article ul {
  color: #a0a0a0;
}

article ul li {
  position: relative;
  margin-bottom: 6px;
  padding-left: 18px;
}

article ul li::before {
  content: "•";
  position: absolute;
  left: 0;
  top: 0;
  color: #4CAF50;
  font-size: 0.75rem;
}

  article h3 {
    font-weight: 600;
    color: #111;
    transition: color 0.3s ease;
  }

  :global(.dark) article h3 {
    color: #f5f5f5;
  }

  article a {
    color: #111;
    transition: color 0.3s ease;
  }

  :global(.dark) article a {
    color: #e5e5e5;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h4 {
    color: #222;
    font-weight: 400;
    transition: color 0.3s ease;
  }

  :global(.dark) article h4 {
    color: #d0d0d0;
  }

  article p {
    margin-top: 9px;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
    cursor: default;
    transition: color 0.3s ease;
  }

  :global(.dark) time {
    color: #a0a0a0;
  }

  [data-title]:hover:after {
    opacity: 1;
    transition: all 0.1s ease-in-out 0.5s;
    visibility: visible;
  }

  [data-title]:after {
    content: attr(data-title);
    background-color: #333;
    color: #fff;
    font-size: .75rem;
    font-family: Menlo, Monaco, Lucida Console, "Courier New", monospace;;
    position: absolute;
    padding: .2rem .5rem;
    bottom: -1.4rem;
    left: 50%;
    white-space: nowrap;
    box-shadow: 1px 1px 1px #222222;
    opacity: 0;
    border: 1px solid #111111;
    z-index: 99999;
    visibility: hidden;
    border-radius: 6px;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  :global(.dark) [data-title]:after {
    background-color: #444;
    border-color: #555;
  }

  [data-title] {
    position: relative;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
  
</style>
