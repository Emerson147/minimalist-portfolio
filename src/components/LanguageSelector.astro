---
import { languages } from '@/i18n/utils';

const currentPath = Astro.url.pathname;
const currentLang = currentPath.startsWith('/en') ? 'en' : 'es';
---

<div class="language-selector">
  {Object.entries(languages).map(([lang, label]) => {
    const isActive = lang === currentLang;
    const href = lang === 'es' ? '/' : `/${lang}`;
    
    return (
      <a 
        href={href} 
        class:list={['lang-button', { active: isActive }]}
        aria-label={`Cambiar idioma a ${label}`}
      >
        {lang.toUpperCase()}
      </a>
    );
  })}
</div>

<style>
  .language-selector {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .lang-button {
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    font-weight: 600;
    font-size: 0.875rem;
    transition: all 0.2s ease;
    color: #666;
    background: transparent;
    border: 1px solid #e5e5e5;
  }

  .lang-button:hover {
    background: #f5f5f5;
    color: #111;
    transform: translateY(-1px);
  }

  .lang-button.active {
    background: #111;
    color: #fff;
    border-color: #111;
  }

  html.dark .lang-button {
    color: #e5e5e5;
    border-color: #333;
  }

  html.dark .lang-button:hover {
    background: #333;
    color: #fff;
  }

  html.dark .lang-button.active {
    background: #fff;
    color: #111;
    border-color: #fff;
  }

  @media print {
    .language-selector {
      display: none;
    }
  }
</style>
